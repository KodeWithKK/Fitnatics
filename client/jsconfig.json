{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@feature/*": ["components/feature/*"],
      "@layout/*": ["components/layout/*"],
      "@pages/*": ["components/pages/*"],
      "@shared/*": ["components/shared/*"],
      "@context/*": ["context/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
      "@images/*": ["images/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["./src"]

  /* for configuring it with VSCode intelliSense to recognize absolute import paths */
}
