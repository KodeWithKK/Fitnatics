{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@config/*": ["src/config/*"],
      "@feature/*": ["src/components/feature/*"],
      "@layouts/*": ["src/components/layouts/*"],
      "@pages/*": ["src/components/pages/*"],
      "@shared/*": ["src/components/shared/*"],
      "@context/*": ["src/context/*"],
      "@data/*": ["src/data/*"],
      "@hooks/*": ["src/hooks/*"],
      "@images/*": ["src/images/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
